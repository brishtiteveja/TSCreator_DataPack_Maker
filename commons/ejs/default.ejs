<div class="row">
	<h3>Choose Image Dimensions</h3>
</div>
<div class="row">
	<div class="columns small-24">
	    <label>Choose Marking Scheme</label>
		<select>
			<option value="timeline">Timelines</option>
			<option value="ruler">Ruler</option>
		</select>
	</div>
</div>
<div class="row">
	<div class="columns small-12">
	    <label>Top</label>
	    <input name="top" type="number" step="10" min="0" max="10000" value="0">
	</div>
	<div class="columns small-12">
	    <label>Base</label>
	    <input name="base" type="number"  step="10" min="0" max="10000" value="10">
	</div>
</div>
<div class="row">
	<div class="columns small-8">
		<label>Units</label>
		<input type="text" name="units" value="myr">
	</div>
	<div class="columns small-8">
		<label>Pixels/Unit</label>
		<input type="number" name="pixels" step="0.1" min="0" max="10" value="10"> 
	</div>
	<div class="columns small-8">
		<label>Vertical Scale</label>
		<input type="number" name="vertical_scale" step="0.1" min="0" max="10" value="1"> 
	</div>
</div>
<div class="row left">
	<input type="checkbox" name="ruler" checked><label>Show Ruler</label>
</div>
<div class="row">
	<div class="columns small-24">
		<label>Animation Age</label>
		<input type="number" name="age" step="0.1" min="0" max="10" value="<%= age %>"> 
	</div>
</div>
